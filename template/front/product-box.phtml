<?php if (!isset($shopBoxSize) || empty($shopBoxSize)) {
    $shopBoxSize = 'col-sm-12 col-md-4';
} ?>
<div class="<?php echo $shopBoxSize; ?> productBox h-product" itemscope itemtype="http://schema.org/Product">
    <div class="thumbnail">
        <?php if ($product['image']) { ?>
            <a itemprop="url" class="u-photo" title="<?php echo $this->escape($product['title']); ?>"
               href="<?php echo $this->escape($product['productUrl']); ?>"><img
                    itemprop="image" src="<?php echo $product['thumbUrl']; ?>"
                    alt="<?php echo $this->escape($product['title']); ?>"/></a>
        <?php } ?>
        <div class="caption">
            <h3 class="p-name" itemprop="name">
                <a title="<?php echo $this->escape($product['title']); ?>"
                   href="<?php echo $this->escape($product['productUrl']); ?>">
                    <?php echo $this->escape($product['title']); ?>
                </a>
            </h3>
            <?php if (isset($product['price']) && $config['view_price'] && $config['order_active']) { ?>
                <div class="clearfix text-center" itemprop="offers" itemscope itemtype="http://schema.org/Offer">
                    <?php if ($product['stock_type'] == 1 && $product['stock'] > 0) { ?>
                        <div class="productPrice p-price">
                            <meta itemprop="priceCurrency" content="<?php echo $this->escape($product['price_currency']); ?>">
                            <strong itemprop="price" content="<?php echo $this->escape($product['price']); ?>"><?php echo $this->escape($product['price_view']); ?></strong>
                        </div>
                    <?php } elseif ($product['stock_type'] != 1) { ?>
                        <div class="productPrice p-price">
                            <meta itemprop="priceCurrency" content="<?php echo $this->escape($product['price_currency']); ?>">
                            <strong itemprop="price" content="<?php echo $this->escape($product['price']); ?>"><?php echo $this->escape($product['price_view']); ?></strong>
                        </div>
                    <?php } else { ?>
                        <div class="label label-danger">
                            <strong><?php _e('Out of stock'); ?></strong>
                        </div>
                    <?php } ?>
                </div>
            <?php } ?>
        </div>
    </div>
</div>