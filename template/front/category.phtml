<?php if (isset($categories) && !empty($categories)) { ?>
<div class="clearfix categoryList">
	<ul>
		<?php foreach($categories as $category) { ?>
		<li class="col-sm-4 col-md-3 list-unstyled">
			<?php if($category['image']) { ?>
            <div class="categoryImage text-center"><a title="<?php echo $this->escape($category['title']); ?>" href="<?php echo $this->escape($category['url']); ?>"><img class="img-thumbnail" src="<?php echo $category['thumbUrl']; ?>" alt="<?php echo $this->escape($category['title']); ?>" /></a></div>
            <div class="categoryTitle text-center"><a title="<?php echo $this->escape($category['title']); ?>" href="<?php echo $this->escape($category['url']); ?>"><?php echo $this->escape($category['title']); ?></a></div>
			<?php } else { ?>
			<div class="categoryTitle text-center"><a title="<?php echo $this->escape($category['title']); ?>" href="<?php echo $this->escape($category['url']); ?>"><i class="fa fa-folder-open"></i> <?php echo $this->escape($category['title']); ?></a></div>
			<?php } ?>
		</li>
		<?php } ?>
	</ul>
</div>
<?php } ?>