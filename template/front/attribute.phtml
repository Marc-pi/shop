<?php if(isset($attribute['all']) && !empty($attribute['all'])) { ?>
<div class="productInfoBox clearfix">
	<div class="itemAttribute">
		<?php foreach($attribute['all'] as $attributeSingle) { ?>
    	<h2><?php echo $attributeSingle['title']; ?></h2>
			<?php foreach($attributeSingle['info'] as $field) { ?>
			<?php if(!empty($field['data'])) { ?>
			<div class="field-<?php echo $field['id']; ?> col-md-6">
				<?php if($field['icon']) { ?>
                <i class="fa <?php echo $field['icon']; ?>"></i>
				<?php } elseif($field['image']) { ?>
				<img src="<?php echo $field['imageUrl']; ?>" alt="<?php echo $field['title']; ?>" />
